{{#if removedUser}}
<div class="alert alert-success alert-dismissible fade show" role="alert">
  User has been rejected.
  <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>
{{/if}}

{{#if approvedUser}}
<div class="alert alert-success alert-dismissible fade show" role="alert">
  User has been approved.
  <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>
{{/if}}

<div class="row">
  <div class="col-6">
    <h1>Users</h1>
  </div>
  <div class="col-6 d-flex justify-content-end">
    <a href="/adduser" type="button" class="btn btn-primary align-self-center">+ add user</a>
  </div>
</div>

<table class="table table-bordered">
  <thead class="thead-dark">
    <tr>
      <th scope="col">#</th>
      <th scope="col">First Name</th>
      <th scope="col">Last Name</th>
      <th scope="col">Email</th>
      <th scope="col">Phone</th>
      <th scope="col" class="text-end">Action</th>
    </tr>
  </thead>
  <tbody>

    {{#each rows}}
    <tr>
      <th scope="row">{{this.user_id}}</th>
      <td>{{this.username}}</td> 
      <td>{{this.email}}</td>
      <td>{{this.name}}</td>
      <td class="text-end">
        <a href="/admin-user/{{this.id}}" type="button" class="btn btn-light btn-small"><i class="bi bi-pencil"></i>
         Approve User</a>
        <a href="/admin-user/{{this.id}}" type="button" class="btn btn-light btn-small"><i class="bi bi-person-x"></i>Reject</a>
      </td>
    </tr>
    {{/each}}

  </tbody>
</table>