<div class="cover-container d-flex w-100 h-100 p-3 mx-auto flex-column">
  <div class="form-group">
   <form action='/signup' method='POST'>
    
    

     <div class="form-group">
      <label class="cover-container px-3 mx-auto flex-column" for="radio-choice">I am a</label>
    <div class="form-check form-check-inline" id="radio-choice">
  <input class="form-check-input" type="radio" name="role" id="inlineRadio1" value="student">
  <label class="form-check-label" for="inlineRadio1">Student</label>
</div>
<div class="form-check form-check-inline">
